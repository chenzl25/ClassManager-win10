<Page
    x:Class="ClassManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Resource/SunLeaves.jpg" />
        </Grid.Background>
        <TextBlock x:Name="ClassManager" Margin="77,10,0,0" TextWrapping="Wrap" Text="ClassManager" VerticalAlignment="Top" FontFamily="Segoe WP" Width="189" HorizontalAlignment="Left" Height="56" FontSize="29.333"/>
        <AppBarButton FontStyle="Italic" x:Name="registerButton" HorizontalAlignment="Left" Label="register" Margin="77,574,0,0" VerticalAlignment="Top" Icon="Permissions" Click="onClickRegister"/>
        <AppBarButton FontStyle="Italic" x:Name="loginButton" HorizontalAlignment="Left" Icon="Accept" Label="login" Margin="198,574,0,0" VerticalAlignment="Top" Click="onClickLogin"/>
        <TextBox x:Name="input_account" HorizontalAlignment="Left" Margin="77,239,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="189" Height="43"/>
        <PasswordBox x:Name="input_password" HorizontalAlignment="Left" Margin="77,342,0,0" VerticalAlignment="Top" Width="189" Height="47"/>
        <TextBlock FontStyle="Italic" x:Name="textBlock" HorizontalAlignment="Left" Margin="77,207,0,0" TextWrapping="Wrap" Text="Account:" VerticalAlignment="Top" Height="27" Width="189"/>
        <TextBlock FontStyle="Italic" x:Name="textBlock1" HorizontalAlignment="Left" Margin="77,317,0,0" TextWrapping="Wrap" Text="password:" VerticalAlignment="Top" Width="189"/>

    </Grid>
    </ScrollViewer>
</Page>
