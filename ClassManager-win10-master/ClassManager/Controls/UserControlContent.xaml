<Page
    x:Class="ClassManager.Controls.UserControlContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassManager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel x:Name="rootPanel">
            <StackPanel.Background>
                <ImageBrush Stretch="Fill" ImageSource="LightColorful.jpg" />
            </StackPanel.Background>
            <RadioButton FontStyle="Italic"  Margin="20,20,112,0" Name="rb1" Checked="Controls">删除</RadioButton>
            <RadioButton FontStyle="Italic"  Margin="20,20,112,0" Name="rb2" Checked="Controls">提升为管理员</RadioButton>
            <RadioButton FontStyle="Italic"  Margin="20,20,112,0" Name="rb3" Checked="Controls">免除管理员权限</RadioButton>
		</StackPanel>
	</Grid>
</Page>
