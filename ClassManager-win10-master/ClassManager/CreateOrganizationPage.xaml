<Page
    x:Class="ClassManager.CreateOrganizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Resource/GreenDream.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="77*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="2">
            <TextBox x:Name="account" Header="Account" Margin="20,20,80,0"/>
            <PasswordBox x:Name="password" Header="Password" Margin="20,10,80,0" />
            <PasswordBox x:Name="confirm_password" Header="Confirm Password" Margin="20,10,80,0"/>
            <Button x:Name="confirmBtn"  Content="create" Click="confirmBtn_Click" HorizontalAlignment="Left" Width="61" RenderTransformOrigin="0.546,1.563" Margin="20,20,149,0" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</Page>
